<div class="item">
    <div class="id-item">
        {{id}}
    </div>
    <div class="check-item">
        <input type="checkbox" class="{{id}}"/>
    </div>
    <div class="name-item">
        <span>{{song-name}}</span>
    </div>
    <div class="action-item">
        <div class="icon-container">
            <div class="ico icon-minus {{id}}"></div>
            <div class="ico icon-pencil {{id}}"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>